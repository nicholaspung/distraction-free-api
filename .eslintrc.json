{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 11
  },
  "rules": {
    "no-unused-labels": "error",
    "no-unused-expressions": "error",
    "no-redeclare": "error",
    "no-self-assign": "error"
  },
  "overrides": [
    {
      "files": ["**/*.spec.js", "**/*.spec.jsx", "**/*.test.js"],
      "env": {
        "jest": true
      }
    }
  ]
}
